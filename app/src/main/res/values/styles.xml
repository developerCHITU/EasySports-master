<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--白天主题颜色-->
    <style name="AppDayTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryDay</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDayDark</item>
        <item name="colorAccent">@color/colorPrimaryDayAccent</item>
        <!--<item name="android:background">@color/transparent</item>-->
        <!--<item name="android:windowIsTranslucent">false</item>-->
        <!--<item name="android:windowBackground">@color/transparent</item>-->
        <item name="colorTextLight">@color/colorDayTextLight</item>
        <item name="colorTextDark">@color/colorDayTextDark</item>
        <item name="colorBg">@color/colorDayBg</item>
        <item name="colorBgDark">@color/colorDayBgDark</item>

        <item name="drawableRefresh">@drawable/ic_svg_refresh_day_bg_24</item>
        <item name="drawableArrowRight">@drawable/ic_svg_arrow_right_day_bg_dark_24</item>
    </style>

    <!--夜晚主题颜色-->
    <style name="AppNightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryNightDark</item>
        <item name="colorAccent">@color/colorPrimaryNightAccent</item>
        <!--<item name="android:background">@color/transparent</item>-->
        <!--<item name="android:windowIsTranslucent">false</item>-->
        <!--<item name="android:windowBackground">@color/transparent</item>-->
        <item name="colorTextLight">@color/colorNightTextDark</item>
        <item name="colorTextDark">@color/colorNightTextLight</item>
        <item name="colorBg">@color/colorNightBg</item>
        <item name="colorBgDark">@color/colorNightBgDark</item>

        <item name="drawableRefresh">@drawable/ic_svg_refresh_night_bg_24</item>
        <item name="drawableArrowRight">@drawable/ic_svg_arrow_right_night_bg_dark_24</item>
    </style>

    <!--全屏主题-->
    <style name="NoTitleFullscreen" parent="AppDayTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--冷启动优化-->
    <style name="AppWelcome" parent="NoTitleFullscreen">
        <item name="android:windowBackground">@mipmap/bryant_cover</item>
    </style>

    <style name="text_center">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_big_center" parent="text_center">
        <item name="android:textColor">?attr/textHighLight</item>
        <item name="android:textSize">@dimen/sp_35</item>
    </style>

    <style name="text_middle_center" parent="text_center">
        <item name="android:textColor">?attr/textHighLight</item>
        <item name="android:textSize">@dimen/sp_20</item>
    </style>

    <!--弹窗主题-->
    <style name="UpdateVersionDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>  <!--边框 -->
        <item name="android:windowIsFloating">true</item> <!-- 是否悬浮在activity上 -->
        <item name="android:windowIsTranslucent">false</item> <!-- 是否半透明 -->
        <item name="android:windowNoTitle">true</item>  <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item> <!-- 背景资源 -->
        <item name="android:backgroundDimEnabled">true
        </item>  <!-- 背景模糊 默认true，设置false之后背景昏暗效果消失 -->
        <item name="android:backgroundDimAmount">0.5</item> <!--设置四周灰色部分的透明度-->
    </style>


</resources>
