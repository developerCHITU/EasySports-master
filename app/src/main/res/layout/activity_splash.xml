<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.rayhahah.easysports.module.SplashActivity"
    >

    <RelativeLayout
        android:id="@+id/rl_splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorBg"
        >

        <ImageView
            android:id="@+id/iv_splash_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/dp_8"
            android:padding="@dimen/dp_3"
            app:cardBackgroundColor="?attr/colorTextDark"
            app:cardCornerRadius="@dimen/dp_5"
            app:cardElevation="@dimen/dp_8">

            <TextView
                android:id="@+id/tv_splash_skip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_3"
                android:text="跳过(1s)"
                android:textColor="?attr/colorTextLight"/>

        </android.support.v7.widget.CardView>


    </RelativeLayout>
</layout>