<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorBg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_match_status_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_bg_check"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="热火"
            android:textColor="?attr/colorTextDark"
            android:textSize="@dimen/sp_20"/>

        <CheckBox
            android:id="@+id/cb_match_status_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_bg_check"
            android:button="@null"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="热火"
            android:textColor="?attr/colorTextDark"
            android:textSize="@dimen/sp_20"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_item_forward"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>