<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="com.rayhahah.easysports.module.home.HomeActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <FrameLayout
            android:id="@+id/fl_home_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <com.ashokvarma.bottomnavigation.BottomNavigationBar
            android:id="@+id/bnb_home"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"
            android:layout_gravity="bottom"
            app:bnbActiveColor="?attr/colorPrimary"
            app:bnbBackgroundColor="?attr/colorBg"
            app:bnbInactiveColor="?attr/colorBgDark"/>
    </LinearLayout>
</layout>

