<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_item_detail_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:foreground="?attr/selectableItemBackground"
    card_view:cardBackgroundColor="?attr/colorBg"
    card_view:cardCornerRadius="3dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/llThreadItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="10dip"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="title"
            android:textColor="?attr/colorTextDark"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_item_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="10dip"
            android:ellipsize="end"
            android:lineSpacingExtra="8dp"
            android:maxLines="3"
            android:text="Summary"
            android:textColor="?attr/colorTextLight"
            android:textSize="12sp"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="10dip">


            <TextView
                android:id="@+id/tv_item_single_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:textColor="?android:attr/textColorSecondary"/>

            <TextView
                android:id="@+id/tv_item_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="right|center"
                android:layout_marginRight="15dip"
                android:drawableLeft="@drawable/ic_list_comment"
                android:drawablePadding="5.0dip"
                android:text="111"
                android:textColor="?attr/colorTextLight"
                android:textSize="@dimen/sp_16"/>


            <TextView
                android:id="@+id/tv_item_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_marginRight="25dp"
                android:layout_toLeftOf="@+id/tv_item_reply"
                android:layout_toStartOf="@+id/tv_item_reply"
                android:drawableLeft="@drawable/ic_list_light"
                android:drawablePadding="5.0dip"
                android:text="0"
                android:textColor="?attr/colorTextLight"
                android:textSize="@dimen/sp_16"/>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>



